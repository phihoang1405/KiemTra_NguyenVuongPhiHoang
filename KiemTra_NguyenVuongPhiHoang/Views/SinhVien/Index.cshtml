@model IEnumerable<KiemTra_NguyenVuongPhiHoang.Models.SinhVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table border="1">
    <tr>
        <th>Mã sinh viên</th>
        <th>Họ tên</th>
        <th>Giới tính</th>
        <th>Ngày sinh</th>
        <th>Hình</th>
        <th>Mã ngành</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaSV)</td>
            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
            <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
            <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
            <td><img src="@item.Hinh" alt="hinh thumbnail" width="100" height="100" /></td>
            <td>@Html.DisplayFor(modelItem => item.MaNganh)</td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSV }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSV }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSV })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Create", "Create", "SinhVien")
